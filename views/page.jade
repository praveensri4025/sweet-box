html(ng-app="tchat")
	head
		title= "Real time web chat"
		link(rel='stylesheet', href='/css/styles.css')
		script(src='/lib/angular/angular.min.js')
		script(src='/js/app.js')
		script(src='/js/controllers.js')
		script(src='/js/directives.js')
		script(src='/socket.io/socket.io.js')
	body(ng-controller='TchatCtrl')
		#content
			#chat
				#messages
					div(ng-repeat="msg in messages") {{msg}}
				div.clearer
				.controls
					form(ng-submit='sendMessage()')
						input#field(ng-model='message')
						input#send(type='submit', value='Envoyer')
			ul#users
				li(ng-repeat="user in users" ng-class-odd="'odd'") {{user.name}}